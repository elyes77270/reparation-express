{% extends 'base.html.twig' %}

{% block title %}Réparation Express - Réparation{% endblock %}

{% block body %}
    {% include 'layout/nav.html.twig'%}
    <section class="py-5">
        <div class="container py-5">
            <div class="row mb-5">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h2 class="fw-bold">Réparation de smartphones</h2>
                    <p class="text-muted">1- Choisir la marque de mon smartphone</p>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-2 mx-auto" style="max-width: 900px;">
                {% for marque in marques %}
                    <div class="col-xxl-4 mb-4" data-aos="flip-right">
                        <div>
                            <a href="{{ path('app_marque', { marque: marque.nom }) }}">
                                <img class="rounded img-fluid shadow w-100 fit-cover" src="{{ asset('uploads/images/' ~ marque.image) }}" style="height: 100%;" alt="{{  marque.nom  }}">
                            </a>
                        </div>
                        <div class="py-4 text-center">
                            <h4 class="fw-bold">{{ marque.nom }}</h4>
                            <a class="btn btn-primary" role="button" href="{{ path('app_marque', { marque: marque.nom }) }}">Choisir</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% include 'layout/footer.html.twig'%}
{% endblock %}
